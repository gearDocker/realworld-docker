server {
    listen 80;

    server_name realworld-docker.com;

    location / {
        proxy_pass http://frontend:3000;
    }

    location /api {
        proxy_pass http://api:3000;
        rewrite ^/api/(.*) /$1 break;
    }

    location /auth {
        proxy_pass http://auth:3000;
        rewrite ^/auth/(.*) /$1 break;
    }
}